[Unit]
Description=FAA Aircraft Data Sync Service
After=network.target

[Service]
Type=oneshot
User=root
WorkingDirectory=/opt/tailnumberlookup
Environment="PATH=/usr/bin:/usr/local/bin:/opt/tailnumberlookup/venv/bin"
ExecStart=/opt/tailnumberlookup/venv/bin/python -m backend.sync.sync_faa_data
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

